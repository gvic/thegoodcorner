<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.geniusweb.fr/dtds/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="adBean.title">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="adBean.description">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="adBean.price">
		<field-validator type="double">
			<param name="minInclusive">0.0</param>
			<message key="errors.positive.float" />
		</field-validator>
	</field>
	<field name="userBean.login">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">4</param>
			<message key="errors.login.tooshort" />
		</field-validator>
	</field>
	<field name="userBean.md5_mdp">
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<message key="errors.password.tooshort" />
		</field-validator>
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="confirmPassword">
		<field-validator type="fieldexpression">
			<param name="expression">userBean.md5_mdp == confirmPassword</param>
			<message key="errors.confirmPassword" />
		</field-validator>
	</field>
	<field name="userBean.email">
        <field-validator type="requiredstring">
            <message key="errors.required" />
        </field-validator>
        <field-validator type="email">
            <message key="errors.email" />
        </field-validator>
    </field>
</validators>