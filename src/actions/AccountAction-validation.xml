<validators>
	<field name="userBean.prenom">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="userBean.nom">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
	</field>
	<field name="userBean.email">
		<field-validator type="requiredstring">
			<message key="errors.required" />
		</field-validator>
		<field-validator type="email">
			<message key="errors.email" />
		</field-validator>
	</field>

