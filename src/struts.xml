<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="package"></constant>

	<!-- Use Guice as the ObjectFactory for this application -->
	<!-- <constant name="struts.objectFactory" value="guice" /> -->
	<!-- When wiring actions use Guice bindings defined in the below module -->
	<!-- <constant name="guice.module" value="core.EJBModule" /> -->

	<package name="default" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="formulaire" class="actions.ActionFormulaire">
			<result name="success">/index.jsp</result>
			<result name="input">/formulaire.jsp</result>
		</action>
		<action name="logout" class="actions.Login">
			<result name="success" type="redirect">/login.jsp</result>
		</action>
<!--		<action name="logout2" class="actions.Logout">-->
<!--			<result name="success" type="redirect">/login.jsp</result>-->
<!--		</action>-->

		<action name="doLogin" class="actions.Login">
			<result name="login" type="redirect">/login.jsp</result>
			<result name="error" type="redirect">/login.jsp</result>
			<result name="success" type="dispatcher">/index.jsp</result>
		</action>

		<action name="doSignUp" class="actions.SignUp">
			<result name="input" type="redirect">/signup.jsp</result>
			<result name="error" type="redirect">/signup.jsp</result>
			<result name="success" type="dispatcher">/index.jsp</result>
		</action>
	</package>
</struts>