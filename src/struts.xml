<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="package"></constant>
	<!-- Use Guice as the ObjectFactory for this application -->
	<constant name="struts.objectFactory" value="guice" />
	<!-- When wiring actions use Guice bindings defined in the below module -->
	<constant name="guice.module" value="core.EjbModule" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	
	<package name="default" extends="struts-default,json-default" namespace="/">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <default-action-ref name="index"></default-action-ref>
        
		<action name="index">
			<result type="tiles">welcome</result>
		</action>
		
		<action name="testLog">
			<result type="tiles">testLogged</result>
		</action>
				
		<action name="logout" class="actions.LogInAction" method="logout">
			<result name="success" type="redirect">/index.html</result>
		</action>

		<action name="Login_*" class="actions.LogInAction" method="{1}">
			<interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" >/login.jsp</result>
			<result name="error" >/login.jsp</result>
			<result name="success" type="tiles" >welcome</result>
		</action>

<!--		Use a WildCard for the called method-->
<!--		This disable first validation (on page load) called by : signUp_input.action-->
		<action name="SignUp_*" class="actions.SignUpAction" method="{1}">
			<interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" type="tiles">signup</result>
			<result name="error" type="tiles">signup</result>
			<result name="success" type="tiles">welcome</result>
		</action>

		<action name="admin" class="actions.PopulateAction" method="adminPopulate">
			<result type="tiles">populateIndex</result>
		</action>

		<action name="addCommunaute_*" class="actions.PopulateAction"
			method="{1}">
			<result name="input" type="tiles">addCommunaute</result>
			<result name="error" type="tiles">addCommunaute</result>
			<result name="success" type="tiles" >welcome</result>
		</action>
		
		<action name="populateAdLogged_*" class="actions.AdLoggedAction" method="{1}">
			<!-- interceptors for FileUpload validations-->
		    <interceptor-ref name="defaultStack">
		    	<param name="fileUpload.maximumSize">200000000</param>
		    	<param name="fileUpload.allowedTypes">image/jpeg,image/gif,image/png,image/bmp</param>
		    </interceptor-ref>
		    <interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" type="tiles">submitAd_logged</result>
			
			<result name="error" type="tiles">submitAd_logged</result>
			<result name="success" type="tiles">welcome</result>
		</action>

		<action name="populateAdUnlogged_*" class="actions.AdUnloggedAction" method="{1}">
			<!-- interceptors for FileUpload validations-->
		    <interceptor-ref name="defaultStack">
		    	<param name="fileUpload.maximumSize">200000000</param>
		    	<param name="fileUpload.allowedTypes">image/jpeg,image/gif,image/png,image/bmp</param>
		    </interceptor-ref>
		    <interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" type="tiles">submitAd_unlogged</result>
			<result name="error" type="tiles">submitAd_unlogged</result>
			<result name="success" type="tiles">welcome</result>
		</action>
		
		<action name="updateAccount_*" class="actions.AccountAction" method="{1}">
			<!-- Compulsary for AJAX validation callbacks -->
			<interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" type="tiles">updateAccount</result>
			<result name="error" type="tiles">updateAccount</result>
			<result name="success" type="tiles">welcome</result>
		</action>
		
		<action name="changePassword_*" class="actions.ChangePasswordAction" method="{1}">
			<!-- Compulsary for AJAX validation callbacks -->
			<interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" type="tiles">changePassword</result>
			<result name="error" type="tiles">changePassword</result>
			<result name="success" type="tiles">welcome</result>
		</action>
		
		<action name="search_*" class="actions.SearchAction" method="{1}">
			<result name="input" type="tiles">searchForm</result>
			<result name="error" type="tiles">searchForm</result>
			<result name="success" type="tiles">searchForm</result>
		</action>
				
		<action name="showAd" class="actions.ShowAdAction" >
			<result type="tiles">showAd</result>
		</action>				
				
		<action name="listAdJson" class="actions.ListAdAction" >
			<result name="success" type="json">/listadaction</result>
		</action>

		<action name="list">
			<result type="tiles">listAd</result>
		</action>

	</package>
</struts>