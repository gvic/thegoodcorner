<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="package"></constant>

	<package name="default" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="formulaire" class="actions.ActionFormulaire">
			<result name="success">/index.jsp</result>
			<result name="input">/formulaire.jsp</result>
		</action>
		<action name="logout" class="actions.UserAction">
			<result name="success" type="dispatcher">/index.jsp</result>
		</action>
<!--		<action name="logout2" class="actions.Logout">-->
<!--			<result name="success" type="redirect">/login.jsp</result>-->
<!--		</action>-->

		<action name="doLogin" class="actions.UserAction" method="login">
			<result name="login" type="redirect">/login.jsp</result>
			<result name="error" type="redirect">/login.jsp</result>
			<result name="success" type="dispatcher">/index.jsp</result>
		</action>

		<action name="doSignUp" class="actions.UserAction" method="signUp">
			<result name="input" type="redirect">/signup.jsp</result>
			<result name="error" type="redirect">/signup.jsp</result>
			<result name="success" type="dispatcher">/index.jsp</result>
		</action>
	</package>
</struts>