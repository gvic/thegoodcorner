<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="package"></constant>
	<!-- Use Guice as the ObjectFactory for this application -->
	<constant name="struts.objectFactory" value="guice" />
	<!-- When wiring actions use Guice bindings defined in the below module -->
	<constant name="guice.module" value="core.EjbModule"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	
	<package name="default" extends="struts-default" namespace="/">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <default-action-ref name="index"></default-action-ref>
        
		<action name="index">
			<result type="tiles">/welcome.tiles</result>
		</action>
				
		<action name="logout" class="actions.UserAction">
			<result name="success" type="tiles" >/welcome.tiles</result>
		</action>

		<action name="doLogin" class="actions.UserAction" method="input">
			<result name="login" >login.jsp</result>
			<result name="input" >login.jsp</result>
			<result name="error" >login.jsp</result>
			<result name="success" type="tiles" >/welcome.tiles</result>
		</action>

<!--		Use a WildCard for the called method-->
<!--		This disable first validation (on page load) called by : signUp_input.action-->
		<action name="SignUp_*" class="actions.UserAction" method="{1}">
			<interceptor-ref name="jsonValidationWorkflowStack"></interceptor-ref>
			<result name="input" type="tiles">/signup.tiles</result>
			<result name="error" type="tiles">/signup.tiles</result>
			<result name="success" type="tiles">/signup.success.tiles</result>
		</action>
	</package>
</struts>